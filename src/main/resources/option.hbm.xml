<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ru.antonsibgatulin.option">

    <class name="OptionModel" table="options">
        <meta attribute="class-description">
            This class contains the OptionModel detail.
        </meta>
        <id name="id" type="java.lang.Integer" column="id">
            <generator class="native"></generator>
        </id>

        <property name="time" column="time" type="java.lang.Long"/>
        <property name="type" column="type" type="java.lang.Integer"/>
        <property name="task" column="task" type="java.lang.String"/>

    </class>
</hibernate-mapping>

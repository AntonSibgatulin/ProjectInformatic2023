<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ru.antonsibgatulin.user">

    <class name="User" table="users">
        <meta attribute="class-description">
            This class contains the user detail.
        </meta>
        <id name="id" type="java.lang.Integer" column="id">

        </id>
        <property name="login" column="login" type="string"/>
        <property name="password" column="password" type="string"/>
        <property name="typeUser" column="typeUser" type="java.lang.Integer"/>
        <property name="mail" column="mail" type="string"/>
        <property name="name" column="name" type="string"/>
        <property name="surname" column="surname" type="string"/>
        <property name="code" column="code" type="java.lang.Integer"/>
        <property name="ban" column="ban" type="java.lang.Integer"/>
        <property name="timeofregistration" column="timeofregistration" type="java.lang.Long"/>
        <property name="timelastonline" column="timelastonline" type="java.lang.Long"/>

    </class>
</hibernate-mapping>
